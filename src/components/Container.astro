---
const { class: className } = Astro.props;
---

<div class:list={['container', className]}>
    <slot />
</div>

<style lang="scss">
    .container {
        position: relative;
        max-width: 80%;
        padding: 100px 20px;
        margin: 0 auto;

        @media (max-width: 1200px) {
            max-width: 90%;
            padding: 80px 20px;
        }

        @media (max-width: 900px) {
            max-width: 95%;
            padding: 50px 20px;
        }
    }
</style>