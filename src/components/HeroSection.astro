---
import Container from "./Container.astro";
import Grain from "./Grain.astro";
import CircleBlur from "./CircleBlur.astro";
import Nav from "./Nav.astro";
---

<section class="hero">
    <CircleBlur />
    <Grain />
    <Container class="container">
        <Nav />
        <div class="wrap">
            <p class="quote">
                “Productivity is being able to do things that you were never able to do before.” — Franz Kafka
            </p>
            <div class="card" />
        </div>
        <div class="by">
            Designed & Built by <a href="https://netoramalho.dev" target="_blank">Neto Ramalho</a>
        </div>
    </Container>
</section>

<style lang="scss">
    .hero {
        position: relative;
        min-height: 100vh;
        width: 100%;
        background-color: hsla(var(--color), 43%, 16%, 1);
        transition: background-color 400ms ease-in-out;
        overflow: hidden;
    }

    .container {
        position: relative;
        z-index: 5;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-content: space-between;
        min-height: 100vh;
    }

    .wrap {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 90px;
        width: 100%;
        margin: 40px 0;

        @media (max-width: 900px) {
            gap: 50px;
        }

        @media (max-width: 800px) {
            flex-direction: column;
            gap: 30px;
        }
    }

    @keyframes fade-left {
        from { opacity: 0; transform: translateX(5%); }
        to { opacity: 1; transform: translateX(0); }
    }
    .card {
        width: 100%;
        max-width: 500px;
        height: 442px;
        border-radius: 10px;
        background: rgba(217, 217, 217, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(5px);
        opacity: 0;
        transform: translateX(5%);
        animation: fade-left 400ms ease-in-out forwards;
        animation-delay: 200ms;
    }

    @keyframes fade-right {
        from { opacity: 0; transform: translateX(-5%); }
        to { opacity: 1; transform: translateX(0); }
    }

    .quote {
        max-width: 40vw;
        opacity: 0;
        transform: translateX(-5%);
        animation: fade-right 400ms ease-in-out forwards;
        animation-delay: 200ms;

        color: rgba(255, 255, 255, 0.6);
        font-size: 36px;
        font-size: clamp(22px, 2.4vw, 56px);
        line-height: 145%;

        @media (max-width: 800px) {
            max-width: 500px;
        }
    }

    @keyframes fade-up {
        from { opacity: 0; transform: translateY(10%); }
        to { opacity: 1; transform: translateY(0); }
    }

    .by {
        color: rgba(255, 255, 255, 0.4);
        font-weight: 400;
        font-size: 16px;
        line-height: 140%;
        text-align: center;
        opacity: 0;
        transform: translateY(10%);
        animation: fade-up 300ms ease-in forwards;
        animation-delay: 800ms;
        margin-bottom: 41px;

        a {
            color: #FFFFFF;
        }
    }
</style>