---
import Grain from "./Grain.astro";
import CircleBlur from "./CircleBlur.astro";
import Nav from "./Nav.astro";
---

<section class="hero">
    <CircleBlur />
    <Grain />
    <Nav />
    <div class="card" />
</section>

<style lang="scss">
    .hero {
        position: relative;
        height: 100vh;
        width: 100%;
        background-color: hsla(var(--color), 43%, 16%, 1);
        transition: background-color 400ms ease-in-out;
    }
    .card {
        width: 433px;
        height: 442px;
        margin: 0 auto;
        margin-top: 200px;
        border-radius: 10px;
        background: rgba(217, 217, 217, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
    }
</style>