<style lang="scss">
    .hero {
        position: relative;
        height: 100vh;
        width: 100%;
        background: hsla(var(--color), 43%, 16%, 1);

        @keyframes fade-up {
            0% { opacity: 0; }
            100% { opacity: 1; }
        }

        &__circle-blur {
            position: absolute;
            inset: 0;
            margin: auto;
            max-width: 70vw;
            max-height: 70vh;
            width: 640px;
            height: 640px;
            filter: blur(200px);
            background: hsla(var(--color), 63%, 36%, 1);
            animation: fade-up 600ms ease-in forwards;
        }

        @keyframes grain {
            from { transform: translate(0, 0); }
            to { transform: translate(-10%, -10%); }
        }

        &::after {
            content: "";
            position: fixed;
            height: 300%;
            width: 300%;
            background-image: url("/noise.webp");
            background-size: 100px;
            mix-blend-mode: multiply;
            transform:translate(0, 0);
            animation: grain 2s steps(10) infinite;
        }
    }
</style>